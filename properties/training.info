numClusters 300         ; Amount of clusters
numIter 10000             ; Amount of iterations
learningRate BoldDriver      ; Learning method
FixedLearningRate
{
    rate 0.0001
}
DiminishingLearningRate
{
    base 0.0001
    T 1
}
BoldDriverLearningRate
{
    base 0.001
    increase 10.5
    decrease 0.5
    margin 1e-10
}
